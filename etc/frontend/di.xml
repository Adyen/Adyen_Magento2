<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Checkout\Model\CompositeConfigProvider">
        <arguments>
            <argument name="configProviders" xsi:type="array">
                <item name="adyen_generic_config_provider" xsi:type="object">Adyen\Payment\Model\Ui\AdyenGenericConfigProvider</item>
                <item name="adyen_cc_config_provider" xsi:type="object">Adyen\Payment\Model\Ui\AdyenCcConfigProvider</item>
                <item name="adyen_oneclick_config_provider" xsi:type="object">Adyen\Payment\Model\Ui\AdyenOneclickConfigProvider</item>
                <item name="adyen_hpp_config_provider" xsi:type="object">Adyen\Payment\Model\Ui\AdyenHppConfigProvider</item>
                <item name="adyen_boleto_config_provider" xsi:type="object">Adyen\Payment\Model\Ui\AdyenBoletoConfigProvider</item>
                <item name="adyen_pos_cloud_config_provider" xsi:type="object">Adyen\Payment\Model\Ui\AdyenPosCloudConfigProvider</item>
            </argument>
        </arguments>
    </type>
    <type name="Adyen\Payment\Model\Ui\AdyenGenericConfigProvider">
        <arguments>
            <argument name="txVariants" xsi:type="array">
                <item name="adyen_ideal" xsi:type="const">Adyen\Payment\Model\Ui\AdyenGenericConfigProvider::IDEAL_TX_VARIANT</item>
                <item name="adyen_klarna" xsi:type="const">Adyen\Payment\Model\Ui\AdyenGenericConfigProvider::KLARNA_TX_VARIANT</item>
                <item name="adyen_paypal" xsi:type="const">Adyen\Payment\Model\Ui\AdyenGenericConfigProvider::PAYPAL_TX_VARIANT</item>
                <item name="adyen_bcmc_mobile" xsi:type="const">Adyen\Payment\Model\Ui\AdyenGenericConfigProvider::BCMC_MOBILE_TX_VARIANT</item>
                <item name="adyen_dotpay" xsi:type="const">Adyen\Payment\Model\Ui\AdyenGenericConfigProvider::DOTPAY_TX_VARIANT</item>
                <item name="adyen_amazonpay" xsi:type="const">Adyen\Payment\Model\Ui\AdyenGenericConfigProvider::AMAZONPAY_TX_VARIANT</item>
                <item name="adyen_googlepay" xsi:type="const">Adyen\Payment\Model\Ui\AdyenGenericConfigProvider::GOOGLEPAY_TX_VARIANT</item>
                <item name="adyen_multibanco" xsi:type="const">Adyen\Payment\Model\Ui\AdyenGenericConfigProvider::MULTIBANCO_TX_VARIANT</item>
                <item name="adyen_facilypay_3x" xsi:type="const">Adyen\Payment\Model\Ui\AdyenGenericConfigProvider::FACILYPAY_3X_TX_VARIANT</item>
                <item name="adyen_sepadirectdebit" xsi:type="const">Adyen\Payment\Model\Ui\AdyenGenericConfigProvider::SEPADIRECTDEBIT_TX_VARIANT</item>
                <item name="adyen_applepay" xsi:type="const">Adyen\Payment\Model\Ui\AdyenGenericConfigProvider::APPLEPAY_TX_VARIANT</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Vault\Model\Ui\TokensConfigProvider">
        <arguments>
            <argument name="tokenUiComponentProviders" xsi:type="array">
                <item name="adyen_cc" xsi:type="object">Adyen\Payment\Model\Ui\TokenUiComponentProvider</item>
                <item name="adyen_googlepay" xsi:type="object">Adyen\Payment\Model\Ui\TokenUiComponentProvider</item>
                <item name="adyen_hpp" xsi:type="object">Adyen\Payment\Model\Ui\PaymentMethodUiComponentProvider</item>
                <item name="adyen_paypal" xsi:type="object">Adyen\Payment\Model\Ui\PaymentMethodUiComponentProvider</item>
                <item name="adyen_klarna" xsi:type="object">Adyen\Payment\Model\Ui\PaymentMethodUiComponentProvider</item>
                <item name="adyen_sepadirectdebit" xsi:type="object">Adyen\Payment\Model\Ui\PaymentMethodUiComponentProvider</item>
            </argument>
        </arguments>
    </type>
</config>
